<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="java.util.List" />

        <variable
            name="lst"
            type="List&lt;String>" />
    </data>

    <LinearLayout
