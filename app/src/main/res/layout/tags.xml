<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="java.util.List" />

        <variable
            name="lst"
            type="List&lt;String>" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView87"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[0],default=`tag 1`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[0]==null?View.GONE:View.VISIBLE}" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[1],default=`tag 2`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[1]==null?View.GONE:View.VISIBLE}" />

            <TextView
                android:id="@+id/textView86"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[4],default=`tag 3`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[4]==null?View.GONE:View.VISIBLE}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView91"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[2],default=`tag 3`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[2]==null?View.GONE:View.VISIBLE}" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[3],default=`tag 4`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[3]==null?View.GONE:View.VISIBLE}" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[5],default=`tag 5`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[5]==null?View.GONE:View.VISIBLE}" />

            <TextView
                android:id="@+id/textView89"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@{lst[6],default=`tag 6`}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{lst[6]==null?View.GONE:View.VISIBLE}" />
        </LinearLayout>
    </LinearLayout>
</layout>